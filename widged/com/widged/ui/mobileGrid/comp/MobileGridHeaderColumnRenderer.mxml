<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx"
    autoDrawBackground="false" xmlns:datagrid="com.widged.ui.mobileGrid.*" 
    >
    
    <fx:Script>
        <![CDATA[
            
            override public function set data(value:Object):void {
                super.data = value;
                this.width = data.width;
                this.percentHeight = 100;
                if(itemIndex == 0) { sepStroke.alpha = 0; };
                columnLabel.text = data.label;
            }
            
            
        ]]>
    </fx:Script>
    <datagrid:MobileGridHeaderBackground left="0" right="0" top="0" bottom="0" />
    
    <s:Line top="0" bottom="0">
        <s:stroke>
            <s:SolidColorStroke id="sepStroke" color="0x696969" weight="1" caps="square"/>
        </s:stroke>
    </s:Line>

    <s:Label id="columnLabel" text="" left="6"  verticalCenter="0" maxDisplayedLines="1"/>
    
    
</s:ItemRenderer>
    
